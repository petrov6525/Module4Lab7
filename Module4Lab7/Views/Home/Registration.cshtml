@{
}


@if (ViewBag.message != null)
{
    <h2 class="text-info">@ViewBag.message</h2>
}


<form method="post" asp-action="Welcome" class="col-md-4 offset-4 border-1">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Tom" name="Name">
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="name" placeholder="name@example.com" name="Email">
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="Password">
    </div>

    <div class="mb-3">
        <input type="submit" class="form-control" value="Sign Up">
    </div>
</form>

