@{
}

@model User?

<div class="collapse" id="navbar">
    <div class="bg-dark p-4">
        <h5 class="text-white h4">@Model?.Name</h5>
        <h5 class="text-white h4">@Model?.Email</h5>
        <a asp-action="LogOut" asp-route-id="@Model?.Id">
            <button>Disconnetct from conferense</button>
        </a>
    </div>
</div>
<nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</nav>

<h2>Welcome, @Model?.Email to ASP.Net MVC Conference</h2>

<h3>Now wathing:</h3>

@foreach(var user in ViewBag?.users)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@user?.Name</h5>
            <h6 class="card-subtitle mb-2 text-muted">@user?.Email</h6>
        </div>
    </div>
}